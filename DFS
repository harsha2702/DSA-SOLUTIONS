// Problem: Perform DFS on a graph represented using adjacency list.

#include <stdio.h>
#include <stdlib.h>
#include <stdbool.h>
#include <string.h>

#define MAX_VERTICES 100

// Graph structure
struct Graph {
    int vertices;
    int adj[MAX_VERTICES][MAX_VERTICES];
};

void initGraph(struct Graph* g, int vertices) {
    g->vertices = vertices;
    for (int i = 0; i < vertices; i++) {
        for (int j = 0; j < vertices; j++) {
            g->adj[i][j] = 0; // No edges initially
        }
    }
}

void addEdge(struct Graph* g, int u, int v) {
    g->adj[u][v] = 1;
    g->adj[v][u] = 1; // For undirected graph
}

void dfs(struct Graph* g, int vertex, bool visited[]) {
    visited[vertex] = true;
    printf("%d ", vertex);

    for (int i = 0; i < g->vertices; i++) {
        if (g->adj[vertex][i] == 1 && !visited[i]) {
            dfs(g, i, visited);
        }
    }
}

int main() {
    struct Graph g;
    initGraph(&g, 5);

    // Adding edges
    addEdge(&g, 0, 1);
    addEdge(&g, 0, 4);
    addEdge(&g, 1, 2);
    addEdge(&g, 1, 3);
    addEdge(&g, 3, 4);

    bool visited[MAX_VERTICES] = {false};
    printf("DFS starting from vertex 0: ");
    dfs(&g, 0, visited);  // Output: 0 1 2 3 4
    printf("\n");

    return 0;
}
