// Problem: Given an unsorted array and a target, return the index of the target using Linear Search.

#include <stdio.h>

int linearSearch(int arr[], int size, int target) {
    for (int i = 0; i < size; i++) {
        if (arr[i] == target) {
            return i;
        }
    }
    return -1;  // Target not found
}

int main() {
    int arr[] = {2, 4, 6, 8, 10};
    int target = 6;
    int size = sizeof(arr) / sizeof(arr[0]);

    int result = linearSearch(arr, size, target);

    if (result != -1) {
        printf("Element found at index %d\n", result);  // Output: Element found at index 2
    } else {
        printf("Element not found\n");
    }

    return 0;
}
