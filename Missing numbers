// Problem: Find the missing number in an array containing numbers from 1 to N with one missing

#include <stdio.h>

int findMissingNumber(int arr[], int size) {
    int totalSum = (size + 1) * (size + 2) / 2;  // Sum of numbers from 1 to N+1
    int arrSum = 0;

    for (int i = 0; i < size; i++) {
        arrSum += arr[i];
    }

    return totalSum - arrSum;  // Missing number is the difference
}

int main() {
    int arr[] = {1, 2, 3, 5};  // Missing number is 4
    int size = sizeof(arr) / sizeof(arr[0]);
    
    int missing = findMissingNumber(arr, size);
    printf("The missing number is: %d\n", missing);  // Output: 4

    return 0;
}
