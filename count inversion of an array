// Problem: Count the number of inversions in an array (where arr[i] > arr[j] for i < j)

#include <stdio.h>

int mergeAndCount(int arr[], int temp[], int left, int right) {
    int mid, i, j, k;
    int invCount = 0;

    if (left < right) {
        mid = (left + right) / 2;

        invCount += mergeAndCount(arr, temp, left, mid);
        invCount += mergeAndCount(arr, temp, mid + 1, right);
        invCount += merge(arr, temp, left, mid, right);
    }

    return invCount;
}

int merge(int arr[], int temp[], int left, int mid, int right) {
    int i = left;    // Starting index for left subarray
    int j = mid + 1; // Starting index for right subarray
    int k = left;    // Starting index to be sorted
    int invCount = 0;

    while (i <= mid && j <= right) {
        if (arr[i] <= arr[j]) {
            temp[k++] = arr[i++];
        } else {
            temp[k++] = arr[j++];
            invCount += (mid - i + 1); // All the remaining elements in the left subarray are greater than arr[j]
        }
    }

    while (i <= mid) {
        temp[k++] = arr[i++];
    }

    while (j <= right) {
        temp[k++] = arr[j++];
    }

    for (i = left; i <= right; i++) {
        arr[i] = temp[i];
    }

    return invCount;
}

int countInversions(int arr[], int size) {
    int temp[size];
    return mergeAndCount(arr, temp, 0, size - 1);
}

int main() {
    int arr[] = {1, 20, 6, 4, 5};
    int size = sizeof(arr) / sizeof(arr[0]);
    
    int result = countInversions(arr, size);
    printf("Number of inversions: %d\n", result);  // Output: 5

    return 0;
}
