// Problem: Solve the 0/1 Knapsack problem using Dynamic Programming.

#include <stdio.h>

#define MAX_ITEMS 100
#define MAX_CAPACITY 1000

int knapsack(int values[], int weights[], int n, int capacity) {
    int dp[MAX_CAPACITY + 1] = {0};

    for (int i = 0; i < n; i++) {
        for (int w = capacity; w >= weights[i]; w--) {
            dp[w] = dp[w] > dp[w - weights[i]] + values[i] ? dp[w] : dp[w - weights[i]] + values[i];
        }
    }

    return dp[capacity];
}

int main() {
    int values[] = {60, 100, 120};
    int weights[] = {10, 20, 30};
    int n = sizeof(values) / sizeof(values[0]);
    int capacity = 50;

    printf("Maximum value that can be obtained: %d\n", knapsack(values, weights, n, capacity));  // Output: 220

    return 0;
}
